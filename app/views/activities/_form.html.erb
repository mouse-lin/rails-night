<%= simple_form_for @activity, html: {class: 'form-horizontal'} do |f| %>
  <%= f.error_notification %>

<div class="form-inputs">
  <%= f.input :title %>
  <%= f.input :description, input_html: {class: 'span6'} %>
  <%= f.input :author_id, collection: User.all.map{|u| [u.nickname, u.id]} %>
  <%= f.input :status, collection: Activity::STATUS.map{|k, v| [v, k]} %>
  <%= f.input :start_at, as: :string %>
  <%= f.input :summary, input_html: {class: 'span6'} %>
</div>

<div class="form-actions">
  <%= f.button :submit %>
</div>
<% end %>
